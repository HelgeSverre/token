---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/keybindings', label: 'Keys' },
  { href: '/themes', label: 'Themes' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/' || currentPath === '';
  return currentPath.startsWith(href);
}
---

<nav class="navbar">
  <div class="navbar-inner">
    <a href="/" class="logo">
      <span class="logo-text">Token</span>
    </a>

    <div class="nav-links">
      {navLinks.map((link) => (
        <a
          href={link.href}
          class:list={['nav-tab', { active: isActive(link.href) }]}
        >
          {link.label}
        </a>
      ))}

      <span class="separator"></span>

      <a
        href="https://github.com/helgesverre/token"
        class="nav-tab github-link"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
      >
        <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" aria-hidden="true">
          <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z"/>
        </svg>
      </a>

      <a href="https://github.com/helgesverre/token/releases/latest" class="download-btn">
        Download â†“
      </a>
    </div>
  </div>
</nav>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 48px;
    z-index: var(--z-overlay);
    background: rgba(24, 24, 24, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
  }

  .navbar-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-5);
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    text-decoration: none;
    flex-shrink: 0;
  }

  .logo-text {
    font-family: var(--font-mono);
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--syn-function);
    letter-spacing: var(--tracking-tight);
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }

  .nav-tab {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wide);
    color: var(--fg-muted);
    text-decoration: none;
    padding: var(--space-3) var(--space-3);
    height: 48px;
    display: flex;
    align-items: center;
    border-bottom: 2px solid transparent;
    transition: color var(--duration-fast) var(--ease-out),
                border-color var(--duration-fast) var(--ease-out);
  }

  .nav-tab:hover { color: var(--fg); }

  .nav-tab.active {
    color: var(--fg-bright);
    border-bottom-color: var(--syn-keyword);
  }

  .separator {
    width: 1px;
    height: 20px;
    background: var(--border);
    margin: 0 var(--space-2);
    flex-shrink: 0;
  }

  .github-link {
    padding: var(--space-2) var(--space-2);
    height: auto;
    border-bottom: none;
  }

  .github-link svg { display: block; }

  .download-btn {
    font-family: var(--font-btn);
    font-size: 0.8rem;
    color: var(--bg-deep);
    text-decoration: none;
    background: var(--syn-function);
    padding: 6px 14px;
    border-radius: var(--r-sm);
    transition: opacity var(--duration-fast) var(--ease-out);
    white-space: nowrap;
    font-weight: 600;
  }

  .download-btn:hover { opacity: 0.85; }

  @media (max-width: 768px) {
    .navbar-inner { padding: 0 var(--space-3); }
    .nav-tab { padding: var(--space-3) var(--space-2); font-size: 0.625rem; }
    .separator { margin: 0 var(--space-1); }
    .download-btn { font-size: 0.625rem; padding: var(--space-1) var(--space-2); }
  }
</style>
